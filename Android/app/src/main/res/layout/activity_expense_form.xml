<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/new_expense_view"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:scrollbars="vertical"
tools:context="se.datasektionen.cashflow.ExpenseForm">
<LinearLayout
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <!--Put form controls here-->
    <TextView
        android:id="@+id/DescriptionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beskrivning"
        android:textSize="8pt">
    </TextView>
    <EditText
        android:id="@+id/description"
        android:layout_height="wrap_content"
        android:hint="Mat till möte"
        android:inputType="textPersonName"
        android:layout_width="fill_parent">
    </EditText>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/ExpenseDateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inköpsdatum (yyyy-mm-dd)"
        android:textSize="8pt">
    </TextView>

    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kvittodelar"
        android:textSize="15pt"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/budgetTextView"/>
    <LinearLayout
        android:id="@+id/ExpensePartList"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/ButtonCreateExpensePart"
            android:layout_height="wrap_content"
            android:text="Ny kvittodel"
            android:onClick="newExpensePart"
            android:layout_width="fill_parent">
        </Button>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/ButtonSendExpense"
        android:layout_height="wrap_content"
        android:text="Skapa Kvitto"
        android:onClick="sendExpense"
        android:layout_width="fill_parent">
    </Button>

</LinearLayout>
</ScrollView>